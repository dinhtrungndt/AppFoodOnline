<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <EditText
                android:id="@+id/editSearch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_text_bg"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:drawablePadding="10dp"
                android:hint="Mời bạn nhập món"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="16sp" />

        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="620dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="375dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/list_home_form"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/tab_Homeic"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_home_24"
               />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_chat_bubble_24" />

            <Button
                android:id="@+id/button5"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:layout_marginLeft="27dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_shopping_cart_24"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_account_circle_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:background="@drawable/ic_baseline_menu_24"
                android:onClick="onAcc" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationview"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/app_bar_main_screen"
        app:itemIconTint="#ff0000"
        app:itemTextColor="#ff0000"
        app:menu="@menu/menu_dashboard" />

</androidx.drawerlayout.widget.DrawerLayout>